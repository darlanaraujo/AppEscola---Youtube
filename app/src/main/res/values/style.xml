<?xml version="1.0" encoding="utf-8"?>
<resources>

     <style name="Camada_azul">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">400dp</item>
         <item name="android:background">@drawable/camada_azul</item>
     </style>

    <style name="Camada_branca">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/camada_branca</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/botao_branco</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/azul</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonAzul">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/botao_azul</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Edit_Text">
        <item name="android:background">@drawable/layout_edit_text</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>